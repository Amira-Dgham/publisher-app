{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Author",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "birthDate": { "type": ["string", "null"], "format": "date" },
    "nationality": { "type": ["string", "null"] },
    "books": { "type": "array" },
    "magazines": { "type": "array" }
  }
}
